{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "files.autoSave": "afterDelay",
  "files.exclude": {
    ".git": true,
    "**/node_modules": true,
    "**/next-env.d.ts": true,
    "**/.next": true,
    "**/.turbo": true,
    "pnpm-lock.yaml": true,
    "tsconfig.json": true,
    ".npmrc": true,
    "go.sum": true,
    "go.work.sum": true,
    ".idea": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
